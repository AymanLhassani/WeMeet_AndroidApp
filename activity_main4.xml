<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="24dp">

    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir espacio a alquilar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="#2196F3" />

    <EditText
        android:id="@+id/numberPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de personas que admite"
        android:inputType="textPersonName"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/scheduleAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberPeople"
        android:layout_marginTop="43dp"
        android:hint="Franja horaria disponible"
        android:inputType="text" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduleAvailable"
        android:layout_marginTop="43dp"
        android:hint="Localización"
        android:inputType="text" />

    <EditText
        android:id="@+id/ventilation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="43dp"
        android:hint="Ventilación - Si o No?"
        android:inputType="text" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ventilation"
        android:layout_marginTop="55dp"
        android:text="Añadir espacio"
        android:backgroundTint="#2196F3" />

</RelativeLayout>